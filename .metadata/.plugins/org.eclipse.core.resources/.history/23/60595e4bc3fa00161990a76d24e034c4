#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include <string.h>

int32_t generate_randnum_file(int32_t n, char PATH);

int main(void) {
	srand(time(NULL));


	FILE * rand_num_file = fopen("file.txt", "w");
		if (rand_num_file == NULL)
		{
		    printf("Error opening file!\n");
		    exit(1);
		}

		for (int32_t count = 0; count < n; count++)
		{
			printf("Writing to file...");
			fprintf(rand_num_file, rand() * 100 + "\n");
		}
		fclose(rand_num_file);

	//int32_t result = generate_randnum_file(10, "");
	return EXIT_SUCCESS;
}

int32_t generate_randnum_file(int32_t n, char PATH)
{
	int result = 0;

	//if (strcmp(PATH, "") == 0) { printf("Setting PATH to default value (%s)\n", PATH = "./"); }
	//strcat(PATH, "random.txt");
	//if (n <= 0) { printf("Setting n to default value (%d)\n", n = 1); }

	FILE * rand_num_file = fopen("file.txt", "w");
	if (rand_num_file == NULL)
	{
	    printf("Error opening file!\n");
	    exit(1);
	}

	for (int32_t count = 0; count < n; count++)
	{
		printf("Writing to file...");
		fprintf(rand_num_file, rand() * 100 + "\n");
	}
	fclose(rand_num_file);


	return result;
}
