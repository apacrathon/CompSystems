#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include <string.h>

typedef unsigned int uint;

int32_t write_random_nums(int32_t n, FILE * f);
int32_t read_file(int32_t * data[], FILE * f);

int main(void) {
	srand(time(NULL));

	FILE * rand_num_file = fopen("random.list", "w");
	uint data_size = 10;
	write_random_nums(data_size, "file.txt");

	return EXIT_SUCCESS;
}

int32_t write_random_nums(int32_t n, FILE * f)
{

	int32_t result = 0;

	if (f == NULL)
	{
	    printf("Error opening file!\n");
	    exit(1);
	}

	for (int count = 0; count < n; count++)
	{
		fprintf(f, "%d\n", (rand() % 100));
	}

	result = fclose(f);

	return result;
}

int32_t read_file(int32_t * data[], FILE * f)
{

}
