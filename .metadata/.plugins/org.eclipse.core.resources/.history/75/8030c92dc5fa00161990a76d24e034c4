#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include <string.h>


int main(void) {
	srand(time(NULL));

	FILE * rand_num_file = fopen("file.txt", "w");
	if (rand_num_file == NULL)
	{
	    printf("Error opening file!\n");
	    exit(1);
	}

	for (int count = 0; count < 10; count++)
	{
		printf("%d\n", rand() * 100);
		fprintf(rand_num_file, "%d\n", (rand() * 100));
	}
	fclose(rand_num_file);

	return EXIT_SUCCESS;
}


